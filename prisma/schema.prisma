generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  name      String?
  centerX   Float    @default(0)
  centerY   Float    @default(0)
  bio       String?  // 원하면 추가
  avatarUrl String?  // 원하면 추가
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}