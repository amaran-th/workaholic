generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  name      String?
  centerX   Float    @default(0)
  centerY   Float    @default(0)
  left      Float    @default(0)
  right     Float    @default(0)
  top       Float    @default(0)
  bottom    Float    @default(0)
  bio       String?  // 원하면 추가
  avatarUrl String?  // 원하면 추가
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  categories Category[]
  tasks      Task[]
  sprints   Sprint[]
}

model Category {
  id       String  @id @default(uuid())
  name     String
  color    String
  createdAt DateTime  @default(now())

  member   Member  @relation(fields: [memberId], references: [id])
  memberId String
  tasks    Task[]
  sprints   Sprint[]
}

model Task {
  id          String   @id @default(uuid())
  no          Int
  content     String
  memo        String?
  startDate   DateTime?
  endDate     DateTime?
  dueDate     DateTime?
  comment     String?
  positionX   Float
  positionY   Float
  createdAt DateTime  @default(now())

  // 관계
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?

  member     Member   @relation(fields: [memberId], references: [id])
  memberId   String

  parentTask   Task?   @relation("SubTasks", fields: [parentTaskId], references: [id])
  parentTaskId String?
  subTasks     Task[]  @relation("SubTasks")

  doStamps   DoStamp[]
  sprint    Sprint?  @relation(fields: [sprintId], references: [id])
  sprintId  String?
}

model DoStamp {
  id        String   @id @default(uuid())
  task      Task     @relation(fields: [taskId], references: [id])
  taskId    String
  createdAt DateTime @default(now())
}

model Sprint {
  id         String        @id @default(uuid())
  name       String
  startDate  DateTime?
  endDate    DateTime?
  createdAt DateTime  @default(now())
  memberId   String
  categoryId String

  member     Member     @relation(fields: [memberId], references: [id])
  category   Category   @relation(fields: [categoryId], references: [id])
  tasks      Task[]
}